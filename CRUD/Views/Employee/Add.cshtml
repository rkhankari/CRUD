@model CRUD.Models.AddEmployeeViewModel

<h5>Add Employee</h5>
<form method="post"> 
    
<div class="mt-sm-2">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="Name"/>
</div>
<div class="mt-sm-2">
    <label class="form-label">Mobile</label>
    <input type="text" class="form-control" asp-for="Mobile" />
</div>
<div class="mt-sm-2">
    <label class="form-label">EmailId</label>
    <input type="Email" class="form-control" asp-for="EmailId" />
</div>
<div class="mt-sm-2">
    <label class="form-label">Address</label>
    <input type="text" class="form-control" asp-for="Address" />
</div>
<div class="mt-sm-2">
    <label class="form-label">DateOfBirth</label>
    <input type="date" class="form-control" asp-for="DateOfBirth" />
</div>
<div class="mt-sm-2">
    <label class="form-label">City</label>
    <input type="text" class="form-control" asp-for="City" />
</div>

<div class="mt-sm-2">
  <button type="submit" class="btn btn-primary">Add</button>
</div>
</form>
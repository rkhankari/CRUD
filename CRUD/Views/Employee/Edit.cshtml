@model CRUD.Models.Entities.Employee

<h5>Edit Employee</h5>

@if(Model is null)
{
    <p> No Student</p>
}
else{
<form method="post">
    <div class="mt-sm-2">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    <div class="mt-sm-2">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-sm-2">
        <label class="form-label">Mobile</label>
        <input type="text" class="form-control" asp-for="Mobile" />
    </div>
    <div class="mt-sm-2">
        <label class="form-label">EmailId</label>
        <input type="Email" class="form-control" asp-for="EmailId" />
    </div>
    
    <div class="mt-sm-2">
        <button type="submit" class="btn btn-primary">Add</button>
            <button type="submit" class="btn btn-danger ms-3"
                    asp-action="Delete"
                    asp-controller="Employee">Delete</button>
    </div>
</form>
}
@{
}
@model List<CRUD.Models.Entities.Employee>

<h1>Employees</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
        <th>Name</th>
            <th>Mobile</th>
            <th>EmailId</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Mobile</td>
                <td>@employee.EmailId</td>
                <td> 
                    <a class="btn btn-primary" asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>